<h1>Listing api_ingredients</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Amountunits</th>
      <th>Ingredientname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @api_ingredients.each do |api_ingredient| %>
      <tr>
        <td><%= api_ingredient.amount %></td>
        <td><%= api_ingredient.amountUnits %></td>
        <td><%= api_ingredient.ingredientName %></td>
        <td><%= link_to 'Show', api_ingredient %></td>
        <td><%= link_to 'Edit', edit_api_ingredient_path(api_ingredient) %></td>
        <td><%= link_to 'Destroy', api_ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingredient', new_api_ingredient_path %>
